<% title 'Sign in' %>
<div class="row">
  <div class="col-sm-4 col-sm-offset-2">
    <h3 class="wjr-sign-in-header">Sign in</h3>
    <div class="wjr-sign-in-column">
      <p><strong>Sign in with your email address</strong></p>
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, :required => true, :autofocus => true, :class => 'form-control', :placeholder => "Email" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, :required => true, :placeholder => "Password", :class => 'form-control' %>
        </div>
        <% if devise_mapping.rememberable? -%>
          <div class="checkbox">
            <%= f.label :remember_me, f.check_box(:remember_me) + " Remember Me" %>
          </div>
        <% end -%>

        <div><%= f.submit "Sign in", :class => "btn btn-primary" %></div>
      <% end %>
      <hr/>
      <h3>Forgot password?</h3>
      <%= render "devise/passwords/new" %>
      <hr/>
      <p><strong>Facebook / Google sign in is not available anymore</strong>. Please sign in using your email address instead.</p>
    </div>
  </div>

  <div class="col-sm-4">
    <h3 class="wjr-sign-in-header">Need an account?</h3>
    <div class="wjr-sign-up-column">
      <%= link_to "<span>Sign up</span>".html_safe, new_registration_path(resource_name), :class => "btn btn-primary" %>
    </div>
  </div>
</div>
